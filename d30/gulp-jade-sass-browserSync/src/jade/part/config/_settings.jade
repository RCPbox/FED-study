//- Navigaiton 믹스인
mixin navigation(navigation_contents)
	ul(role="presentation")
		each item in navigation_contents
			li(class=(current_page == item.href ? 'active' : ''))
				+navLink(item)
				if item.child
					+navigation(item.child)

//- navLink 믹스인
mixin navLink(item)
	a(href=item.href)= item.content